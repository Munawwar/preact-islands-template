{
  "name": "preact-islands-template",
  "version": "0.0.1",
  "description": "Preact island architecture starter template (SSR) - with express and esbuild",
  "type": "module",
  "module": "server/server.js",
  "scripts": {
    "dev": "mkdirp dist && concurrently \"npm:watch:assets\" \"npm:watch:server\"",
    "watch:server": "cross-env NODE_OPTIONS=--enable-source-maps nodemon --watch server/ --watch build.js server/server.js",
    "watch:assets": "nodemon --watch client/ --watch build.js -e '*' -x \"node build.js\"",
    "start": "cross-env NODE_OPTIONS=--enable-source-maps node server/server.js",
    "build": "node build.js",
    "lint": "eslint --ext js,jsx build.js server/ client/",
    "lint:fix": "eslint --fix --ext js,jsx build.js server/ client/"
  },
  "keywords": [
    "preact",
    "MPA",
    "SSR",
    "esbuild"
  ],
  "author": "Munawwar",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "preact": "^10.12.1",
    "preact-render-to-string": "^5.2.6",
    "sirv": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "del": "^7.0.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.32.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "globby": "^13.2.2",
    "livereload": "^0.9.3",
    "mkdirp": "^3.0.1",
    "nodemon": "^2.0.20"
  },
  "eslintConfig": {
    "ignorePatterns": "dist/",
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "semistandard",
      "preact",
      "plugin:jsx-a11y/recommended"
    ],
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "semi": "error"
    },
    "settings": {
      "jest": {
        "// jest is dummy config only needed for preact eslint plugin": true,
        "version": 27
      }
    }
  }
}
