{
  "name": "preact-islands-template",
  "version": "0.0.1",
  "description": "Preact island architecture starter template (SSR) - with express and esbuild",
  "type": "module",
  "module": "server/server.js",
  "scripts": {
    "dev": "node --experimental-loader hot-esm server/server.js",
    "start": "node server/server.js",
    "lint": "eslint --ext js,jsx server/ public/",
    "lint:fix": "eslint --fix --ext js,jsx server/ public/"
  },
  "keywords": [
    "preact",
    "MPA",
    "SSR",
    "esbuild"
  ],
  "author": "Munawwar",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^6.5.0",
    "@fastify/static": "^6.12.0",
    "compression": "^1.7.4",
    "fastify": "^4.24.3",
    "htm": "^3.1.1",
    "preact": "^10.19.1",
    "preact-render-to-string": "^5.2.6"
  },
  "devDependencies": {
    "eslint": "^8.32.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "hot-esm": "^1.6.0",
    "livereload": "^0.9.3"
  },
  "eslintConfig": {
    "ignorePatterns": "dist/",
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "semistandard",
      "preact",
      "plugin:jsx-a11y/recommended"
    ],
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "semi": "error"
    },
    "settings": {
      "jest": {
        "// jest is dummy config only needed for preact eslint plugin": true,
        "version": 27
      }
    }
  }
}
